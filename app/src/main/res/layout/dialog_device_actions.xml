<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingTop="12dp"
    android:paddingEnd="24dp"
    android:paddingBottom="8dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/actionTurnRed"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_red"
        android:textColor="@color/red" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/actionTurnGreen"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_green"
        android:textColor="@color/green" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/actionTurnBlue"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_blue"
        android:textColor="@color/blue" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/actionTurnRainbow"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_rainbow"
        android:textColor="@color/purple" />

</LinearLayout>